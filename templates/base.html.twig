<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <html lang="fr">
        <title>{% block title %}Bucket-list{% endblock %}</title>
        <!-- Liens google fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300;1,400;1,
            700&display=swap" rel="stylesheet">
        <!-- css -->
        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        <!-- favicon -->
        <link rel="icon" href="{{ asset('img/favicon.png') }}">
    </head>
    <body>
        <div class="container">
            <header>
                <h1><a href="{{ path('main_home') }}">
                    <img src="{{ asset('img/logo.png') }}" alt="Series !"></a>
                    Bucket-List</h1>
                {% include('main/inc/nav.html.twig') %}
            </header>
            <main>
                {% block body %}{% endblock %}
            </main>
            <footer>
                <div>&copy; {{ "now"|date("Y") }} Series !</div>
            </footer>
        </div>
    </body>
</html>
